<%- include('sidePanel'); -%>
    <!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width,
                initial-scale=1.0">
            <title>UserProfilePage</title>
            <link rel="stylesheet"
                href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
                integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
                crossorigin="anonymous">
            <link rel="stylesheet"
                href="https://use.fontawesome.com/releases/v6.0.0/css/all.css">
            <style>
      
    .gradient-custom {
/* fallback for old browsers#f6d365 */
background: #f6d365;

/* Chrome 10-25, Safari 5.1-6 */
background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
}
#editBtn{
margin-left: 180px;
background-color:#10558d;

padding: 10px 25px;
text-align: center;

display: inline-block;


}
a {
color:chocolate;
}
#active {
background-color:brown;
padding: 10px;
color:chocolate;
text-decoration: none;
}

</style>
        </head>
        <body>
            <section class="vh-100" style="background-color: #f4f5f7;">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center
                        align-items-center
                        h-100">
                        <div class="col col-lg-6 mb-4 mb-lg-0">
                            <div class="card mb-3" style="border-radius:
                                .5rem;">
                                <div class="row g-0">


                                    <div class="col-md-4 gradient-custom
                                        text-center
                                        text-white" id="image"
                                        style="border-top-left-radius: .5rem;
                                        border-bottom-left-radius: .5rem;">

                                        <div class="img-fluid my-5 ";style="
                                            border-radius: 50px;"
                                            id="profileImg"></div>
                                        <h5 style="color: black;" id="fullName"></h5><hr>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body p-4">
                                            <h6>Information</h6>
                                            <hr class="mt-0 mb-4">
                                            <div class="row pt-1">
                                                <div class="col-6 mb-3">
                                                    <h6>Email</h6>
                                                    <p id="email"></p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Date Of Birth</h6>
                                                    <p id="DOB"></p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Contact</h6>
                                                    <p id="contact"></p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Country</h6>
                                                    <p id="country"></p>
                                                </div>
                                            </div>

                                            <hr class="mt-0 mb-4">
                                            <div class="row pt-1">
                                              
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <script
                src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script>
       $(document).ready(function(){
        load_data();
        function load_data()
        {
            let URL = $(location).attr('href');
                let id = URL.substring(URL.lastIndexOf('/') + 1);
           $.ajax({
            url:'http://localhost:2020/api/v1/user/'+id,
            method:"get",
           headers: {"authorization": localStorage.getItem('authorization')},
           success:function(data){
            $('#fullName').append(data.data.fullName)
            $('#email').append(data.data.email)
            $('#DOB').append(data.data.DOB)
            $('#contact').append(data.data.contactNumber)
            $('#country').append(data.data.country)
            $('#profileImg').append('<img src="/'+data.data.profileImg+'" height="100px" width="100px">')
           
           
           }
          });
        }
     })
    </script>
        </body>
    </html>















