<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Reset Password</title>
        <link rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous"
            />
    </head>
    <body>
        <div class="container">
            <h2 style="margin-left:350px">Reset password form</h2>
            <div class="form-group">
                <label for="password">password:</label>
                <input type="password" class="form-control" id="password"
                    placeholder="example@123" name="password">
            </div>

            <div class="form-group">
                <label for="password">confirm Password:</label>
                <input type="password" class="form-control"
                    id="confirmPassword"
                    placeholder="example@123" name="confirmPassword">
            </div>

            <button type="submit" class="btn btn-primary" id="submit">Submit</button>
        </div>
        <script
            src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">
            </script>
        <script>
            $(document).ready(function () {
          $("#submit").click(function () {
            let URL = $(location).attr('href');
            let forgotPasswordToken = URL.substring(URL.lastIndexOf('/') + 1);
            $.ajax({
            url:"http://localhost:2020/api/v1/auth/reset-password/"+forgotPasswordToken,
            method:"patch",
            dataType: "json",
            data: {
                    password: $("#password").val(),
                    confirmPassword: $("#confirmPassword").val()
            },
            success: function (msg) {
                  alert("password set succesfully");
                  location.href("/login");
            }
          });
        });
      });
  

       </script>
    </body>
</html>