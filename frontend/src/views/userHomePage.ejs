<%- include('userDashboard'); -%>
    <!DOCTYPE html>
    <html lang="en">
        <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,
            initial-scale=1.0">
        <title>Home Page</title>
        <style>
            img{
                margin-left: 80px;
                margin-top:-20px;
            }
            h1{
                margin-top:-2px;
                margin-left: 80px;
                margin-right: 80px;
                font-family: 'Times New Roman', Times, serif;
                color: red;
            }
        </style>
        </head>
        <body>
            <div class="container">
                <marquee width="100%" behavior="alternate"> <h1 id="fullName">Welcome,</h1></marquee>
                <img
                    src="https://png.pngtree.com/png-clipart/20200701/original/pngtree-online-shopping-with-cart-and-creative-shopping-icons-png-image_5345680.jpg"
                    width="1100px" height="500px">
            </div>
            <script
                src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script>
                $(document).ready(function() {
                    
                if(!(localStorage.getItem('authorization'))){
                  alert("you are not loggin.please Login first");
                  location.replace("/login");
                }else{
                        load_data();
                        function load_data()
                        {
                            $.ajax({
                                url:"http://localhost:2020/api/v1/user",
                                method:"get",
                                headers: {"authorization": localStorage.getItem('authorization')},
                                success:function(data)
                                {
                                    $('#fullName').append(data.data.fullName)
                                }
                            });
                        }
                   }
               })
         </script>
    </body>
</html>