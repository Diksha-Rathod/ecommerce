<%- include('userDashboard'); -%>
    <!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width,
                initial-scale=1.0">
            <title>profilepage</title>
            <link rel="stylesheet"
                href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
                integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
                crossorigin="anonymous">
            <link rel="stylesheet"
                href="https://use.fontawesome.com/releases/v6.0.0/css/all.css">
            <style> 
        .gradient-custom {
        /* fallback for old browsers#f6d365 */
        background: #f6d365;

        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));

        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
        }
        #editBtn{
            margin-left: 180px;
            background-color:#10558d;
            padding: 10px 25px;
            text-align: center;
            display: inline-block;
        }
        a {
        color:chocolate;
        }
        #active {
        background-color:brown;
        padding: 10px;
        color:chocolate;
        text-decoration: none;
        }
        body {font-family: Arial, Helvetica, sans-serif;}
        /* The Modal (background) */
        .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }
        /* Modal Content */
        .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 100%;
        }
        /* The Close Button */
        .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        }
        .close:hover,
        .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
        }
    </style>
        </head>
        <body>
            <section class="vh-100" style="background-color: #f4f5f7;">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center
                        align-items-center
                        h-100">
                        <div class="col col-lg-8 mb-8 mb-lg-8">
                            <div class="card mb-3" style="border-radius:
                                .5rem;">
                                <div class="row g-0">
                                    <div class="col-md-4 gradient-custom
                                        text-center
                                        text-white" id="image"
                                        style="border-top-left-radius: .5rem;
                                        border-bottom-left-radius: .5rem;">
                                        <div class="img-fluid my-5 ";style="
                                            border-radius: 50px;"
                                            id="profileImg"></div>
                                        <h5 style="color: black;" id="fullName"></h5><hr>
                                        <b><a id="active" href="#">My profile</a></b>
                                        <hr>
                                        <b><a href="/user/changePassword">Change
                                                password</a></b>
                                        <hr>
                                        <b><a href="/payment">Payment Method</a></b>
                                        <hr>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body p-4">
                                            <h6>Information</h6>
                                            <hr class="mt-0 mb-4">
                                            <div class="row pt-1">
                                                <div class="col-6 mb-3">
                                                    <h6>Email</h6>
                                                    <p id="email"></p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Date Of Birth</h6>
                                                    <p id="DOB"></p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Contact</h6>
                                                    <p id="contact"></p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Country</h6>
                                                    <p id="country"></p>
                                                </div>
                                            </div>
                                            <br>
                                            <br>
                                            <br>
                                            <hr class="mt-0 mb-4">
                                            <div class="row pt-1">
                                                <div class="col-12">
                                                    <div class="btn btn-primary
                                                        mb-3 float-right"
                                                        id="editBtn">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <script
                    src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                <script>
            $(document).ready(function(){
            load_data();
            function load_data()
            {
               $.ajax({
               url:'http://localhost:2020/api/v1/user',
               method:"get",
               headers: {"authorization": localStorage.getItem('authorization')},
               success:function(data){
                $('#fullName').append(data.data.fullName)
                $('#email').append(data.data.email)
                $('#DOB').append(data.data.DOB)
                $('#contact').append(data.data.contactNumber)
                $('#country').append(data.data.country)
                $('#profileImg').append('<img src="/'+data.data.profileImg+'" height="100px" width="100px">')
                $('#editBtn').append('<a href="/user/edit/'+data.data.id +'" type="button"  style="color:white;text-decoration:none">Edit</a>');
               }
              });
            }
         })
    </script>
            </body>
        </html>